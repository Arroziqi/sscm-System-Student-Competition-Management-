generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  username     String        @id @db.VarChar(100)
  password     String        @db.VarChar(100)
  email        String        @unique @db.VarChar(100)
  token        String?       @db.VarChar(100)
  competitions Competition[]
  portfolio    Portfolio?

  @@map("users")
}

model Competition {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(100)
  year      DateTime  @db.DateTime(0)
  region    Region
  category  Category
  predicate Predicate @default(Participant)
  username  String    @db.VarChar(100)
  user      User      @relation(fields: [username], references: [username])

  @@index([username], map: "competition_username_fkey")
  @@map("competition")
}

model Portfolio {
  id             Int      @id @default(autoincrement())
  full_name      String   @db.VarChar(100)
  place_of_birth String   @db.VarChar(100)
  date_of_birth  DateTime @db.DateTime(0)
  phone_number   String @db.VarChar(20)
  linkedin       String?  @db.VarChar(100)
  github         String?  @db.VarChar(100)
  instagram      String?  @db.VarChar(100)
  website        String?  @db.VarChar(100)
  domicile       String   @db.VarChar(100)
  summary        String?  @db.VarChar(300)
  username       String   @unique @db.VarChar(100)
  user           User     @relation(fields: [username], references: [username])

  @@map("portfolio")
}

enum Region {
  INTERNATIONAL
  NATIONAL
  REGIONAL
  CAMPUS
}

enum Category {
  Programming
  DataScience
  Design
  Sport
  Research
}

enum Predicate {
  FirstPlace
  SecondPlace
  ThirdPlace
  HonorableMention
  Finalist
  Participant
}
